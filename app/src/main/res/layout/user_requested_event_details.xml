<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.maryhuerta.cateringapp.CatererSelectedUserRequestActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/childRequestedItem"
        android:padding="8dp">

        <TextView
            android:id="@+id/screenTitleTextView"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="Selected Event"
            android:textAlignment="center"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/lastNameTextView"
            android:layout_width="368dp"
            android:layout_height="20dp"
            android:text="Last name"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="42dp" />

        <TextView
            android:id="@+id/firstNameTextView"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="First name"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="84dp" />


        <TextView
            android:id="@+id/eventDateTextView"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="Event date"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="134dp" />

        <TextView
            android:id="@+id/durationTextView"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="Duration"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="182dp" />

        <TextView
            android:id="@+id/hallNameTextView"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="Hall name"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="235dp" />

        <TextView
            android:id="@+id/eventNameTextView"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="Event name"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="285dp" />

        <Button
            android:id="@+id/ApproveSelectedUserRequestButton"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="Approve Selected Event"
            android:onClick="ApproveSelectedUserRequestButtonClicked"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="351dp" />

        <Button
            android:id="@+id/CreateCateredEventPlanButton"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="Approve Selected Event"
            android:onClick="CreateCateredEventPlanButtonClicked"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="351dp" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
